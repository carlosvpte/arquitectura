package tareaprogramacion;

import java.util.Scanner;

public class entrada {

	public static void main (String a []){

		Scanner X= new Scanner(System.in);
		int r=X.nextInt();
		Scanner Y=new Scanner (System.in);
		int t=Y.nextInt();
		int m=r+t;
		System.out.println(" La suma de los dos numeros es " +m);
		
		int z;
			z=r;
			r=t;
			t=z;
		System.out.println(" Entonces r es igual a= "+t+" y t es igual a ="+r);		
		
								
		if (r>t)
		System.out.println(" Al elevar a la potencia r sobre t =" +Math.pow(r,t));
		else
		System.out.println(" Al elevar a la potencia t sobre r =" +Math.pow(t,r));
}
}
